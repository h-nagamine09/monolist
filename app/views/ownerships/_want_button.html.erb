<!--Want,Unwantボタン-->
<% if current_user.want?(item) %>
  <%= form_tag(ownership_path(item.id),method: :delete) do %>
  <%= hidden_field_tag :item_id, item.id %> 
  <%= hidden_field_tag :type, 'Want' %><!--unwantでは必ずitemidが設定されている。-->
  <%= submit_tag 'Unwant',class: 'btn btn-success' %><!--Unwantボタン-->
  <% end %>
<% else %>
 <%= form_tag(ownerships_path) do %>
   <%= hidden_field_tag :item_code, item.code %> 
   <%= hidden_field_tag :type, 'Want' %><!--wantでは必ずしもitem_idが存在するとは限らないためitemCode主体ですすめる-->
   <%= submit_tag 'Want it', class: 'btn btn-primary' %><!--wantボタン--> 
 <% end %>
<% end %>
  